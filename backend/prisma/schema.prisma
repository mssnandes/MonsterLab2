generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id            Int     @id @default(autoincrement())
  name          String
  email         String  @unique
  password      String  

  @@map("users")
}

model Clothing{
  id            Int     @id @default(autoincrement())
  clothingClass String
  name          String  
  stock         Int
  price         Float  
  description   String  @db.Text
  image         String
  promotion     Float  

  @@map("clothing")
}

model Suplements{
  id              Int     @id @default(autoincrement())
  suplementClass  String  
  nameProduct     String  @unique
  image           String  @unique
  marca           String
  price           Float  
  description     String  @db.Text
  promotion       Float  
  stock           Int  
  weight          String  

  @@map("suplements")
}

model Acessories{
  id              Int     @id @default(autoincrement()) 
  name            String  
  image           String  @unique
  price           Float  
  description     String  @db.Text
  promotion       Float  
  stock           Int   

  @@map("acessories")
}

model Sabores{
  id            Int     @id @default(autoincrement())
  sabor         String     

  @@map("sabores")  
}

model Cart {
  id            Int      @id @default(autoincrement())
  productId     Int
  quantity      Int
  createdAt     DateTime @default(now())

  @@map("cart")
}